<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff2f6"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="#000000">

        <ImageView
            android:id="@+id/user_profile_title_back"
            android:layout_width="37dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#D6DCDC"/>

	<RelativeLayout
        android:id="@+id/user_profile_avatar"
        android:layout_width="match_parent"
        android:layout_height="67dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_user_profile_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/default_hd_avatar"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D6DCDC"/>
    <RelativeLayout
        android:id="@+id/user_profile_nick"
        android:layout_width="match_parent"
        android:layout_height="37dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_user_profile_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="未设置"
            android:textSize="17dp"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D6DCDC"/>

    <RelativeLayout
        android:id="@+id/user_profile_weixh"
        android:layout_width="match_parent"
        android:layout_height="37dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信号"
            android:textSize="21dp"
            android:gravity="center"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_user_profile_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="17dp"
            android:text="未设置"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D6DCDC"/>

    <RelativeLayout
        android:id="@+id/user_profile_qrcode"
        android:layout_width="match_parent"
        android:layout_height="37dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二维码名片"
            android:textSize="21dp"
            android:gravity="center"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D6DCDC"/>
    <RelativeLayout
        android:id="@+id/user_profile_address"
        android:layout_width="match_parent"
        android:layout_height="37dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的地址"
            android:textSize="21dp"
            android:gravity="center"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    <View
    android:layout_width="match_parent"
    android:layout_height="23dp"
    android:background="#D6DCDC"/>

    <RelativeLayout
        android:id="@+id/user_profile_sex"
        android:layout_width="match_parent"
        android:layout_height="37dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="未设置"
            android:textSize="20dp"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D6DCDC"/>
    <RelativeLayout
        android:id="@+id/user_profile_street"
        android:layout_width="match_parent"
        android:layout_height="37dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地区"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="未设置"
            android:textSize="20dp"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D6DCDC"/>
    <RelativeLayout
        android:id="@+id/user_profile_qianming"
        android:layout_width="match_parent"
        android:layout_height="37dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个性签名"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="未设置"
            android:textSize="20dp"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D6DCDC"/>
</LinearLayout>
